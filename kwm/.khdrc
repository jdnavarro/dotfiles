# enable kwm compatibility mode
khd kwm on

# set border color for different modes
khd mode default color 0xddd5c4a1
khd mode switcher color 0xddbdd322

# toggle between modes
- 0x50                  :   khd -e "mode activate switcher"
switcher - 0x50         :   khd -e "mode activate default"

# switcher mode
switcher - r            :   khd -e "reload"

switcher - return       :   open -na /Applications/iTerm2.app;\
                            khd -e "mode activate default"

switcher - j            :   kwmc window -f west
switcher - 0x29         :   kwmc window -f east
switcher - k            :   kwmc window -f south
switcher - l            :   kwmc window -f north
switcher - n            :   kwmc window -fm prev
switcher - p            :   kwmc window -fm next

switcher - 1            :   kwmc space -fExperimental 1
switcher - 2            :   kwmc space -fExperimental 2
switcher - 3            :   kwmc space -fExperimental 3
switcher - 4            :   kwmc space -fExperimental 4
switcher - 5            :   kwmc space -fExperimental 5
switcher - 6            :   kwmc space -fExperimental 6

switcher - 0x21         :   kwmc space -fExperimental left
switcher - 0x1E         :   kwmc space -fExperimental right

switcher + shift - 0x21 :   kwmc window -m space left;\
                            kwmc space -fExperimental left

switcher + shift - 0x1E :   kwmc window -m space right;\
                            kwmc space -fExperimental right

switcher - a                :   kwmc window -c expand 0.05 west
switcher - f                :   kwmc window -c expand 0.05 east
switcher - d                :   kwmc window -c expand 0.05 south
switcher - s                :   kwmc window -c expand 0.05 north
switcher + shift - a        :   kwmc window -c reduce 0.05 west
switcher + shift - f        :   kwmc window -c reduce 0.05 east
switcher + shift - d        :   kwmc window -c reduce 0.05 south
switcher + shift - s        :   kwmc window -c reduce 0.05 north

switcher + shift - j                :   kwmc window -s west
switcher + shift - 0x29             :   kwmc window -s east
switcher + shift - k                :   kwmc window -s south
switcher + shift - l                :   kwmc window -s north
