set visualbell
set wildmode=list:full
set defsearch=g

javascript << EOF
    toggle_element = function (name) {
        document.getElementById(name).collapsed ^= 1;
    }
EOF
map <C-t> :js toggle_element('nav-bar')<CR>
#map <C-b> :js toggle_element('PersonalToolbar')<CR>
map <C-w> :js toggle_element('webdeveloper-toolbar')<CR>

javascript << EOF
(function(){
    var feedPanel = document.createElement("statusbarpanel");
    feedPanel.setAttribute("id", "feed-panel-clone");
    feedPanel.appendChild(document.getElementById("feed-button"));
    feedPanel.firstChild.setAttribute("style", "padding: 0; max-height: 16px;");
    document.getElementById("status-bar")
            .insertBefore(feedPanel, document.getElementById("security-button"));
})();
EOF

javascript << EOF
(function(){
    var zoteroPanel = document.createElement("statusbarpanel");
    zoteroPanel.setAttribute("id", "zotero-panel-clone");
    zoteroPanel.appendChild(document.getElementById("zotero-status-image"));
